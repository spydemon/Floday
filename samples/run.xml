<run>
	<host
	  name="spyzone"
	  type="root"
	  data="something"
	  port="666"
	>
		<container
		  name="databases"
		  type="postgre-sql"
		  ipv4="10.0.3.13"
		  data="/tank/spyzone/db"
		  port="siet"
		/>
		<container
		  name="web"
		  type="web-proxy"
		  port="80,442"
		  data="something"
		>
			<container
			  data="something"
			  name="blog"
			  type="wordpress"
			  ssl="true"
			  vhost="blog.spyzone.fr"
			  db-type="postgre"
			  db-host="10.0.3.13"
			  db-username="username"
			  db-password="password"
			  git-path="/tank/spyzone/blog"
			  ip="10.0.3.12"
			  port="443"
			/>
			<container
			  data="something"
			  name="analytic"
			  type="piwik"
			  vhost="piwik.spyzone.fr"
			  db-type="postgre"
			  db-host="10.0.3.13"
			  db-username="piwik-db"
			  db-password="password"
			  git-path="/tank/spyzone/piwik"
			  port="32"
			/>
			<!--application
			  name="metalphp"
			  type="php"
			  path="/tank/php/smallproject"
			  vhost="lolproject.com"
			/-->
		</container>
		<container
		  name="mumble"
		  type="mumble"
		  port="1234"
		  data="/tank/spyzone/mumble"
		/>
		<container
		  name="backup"
		  type="backup-saver"
		  save="/tank/spyzone"
		  to="spydemon@backup.spyzone.fr"
		  port="233"
		  data="something"
		/>
		<application
		  data="something"
		  name="webbridge"
		  type="bridge"
		  port="442"
		  to="10.0.3.12:80"
		/>
	</host>
	<host name="backup">
		<container
		  name="root"
		  type="root"
		  monitoring-type="zabbix"
		  monitorign-server="monitoring.spyzone.fr"
		>
			<application
			  name="backup"
			  type="backup-receiver"
			  port="233"
			/>
		</container>
	</host>
</run>
