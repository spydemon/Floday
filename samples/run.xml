<run>
	<host name="spyzone">
		<container
		  type="root"
		  monitoring-type="zabbix"
		  monitorign-server="monitoring.spyzone.fr"
		>
			<container
			  type="postgre-sql"
			  name="databases"
			  ipv4="10.0.3.13"
			  data="/tank/spyzone/db"
			/>
			<container 
			  type="web-proxy"
			  name="web"
			  port="80,442"
			>
				<container
				  type="wordpress"
				  name="blog"
				  ssl="true"
				  vhost="blog.spyzone.fr"
				  db-type="postgre"
				  db-host="10.0.3.13"
				  db-username="username"
				  db-password="password"
				  git-path="/tank/spyzone/blog"
				/>
				<container
				  type="piwik"
				  name="analytic"
				  vhost="piwik.spyzone.fr"
				  db-type="postgre"
				  db-host="10.0.3.13"
				  db-username="piwik-db"
				  db-password="password"
				  git-path="/tank/spyzone/piwik"
				/>
				<php
				  path="/tank/php/smallproject"
				  vhost="lolproject.com"
				/>
			</container>
			<container
			  type="mumble"
			  name="mumble"
			  port="1234"
			  data="/tank/spyzone/mumble"
			/>
			<container
			  type="backup-saver"
			  name="backup"
			  save="/tank/spyzone"
			  to="spydemon@backup.spyzone.fr"
			  port="233"
			/>
		</container>
	</host>
	<host name="backup">
		<container
		  type="root"
		  monitoring-type="zabbix"
		  monitorign-server="monitoring.spyzone.fr"
		>
			<container
			  type="backup-receiver"
			  name="backup"
			  port="233"
			/>
		</container>
	</host>
</run>
