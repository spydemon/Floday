<run
  name="something"
  type="root"
>
	<container
	  name="databases-onpartial"
	  type="postgre-sql"
	  ipv4="10.0.3.13"
	  data="/tank/spyzone/db"
	/>
	<container
	  name="web"
	  type="web-proxy"
	  port="80,442"
	>
		<container
		  name="blog"
		  type="wordpress"
		  ssl="true"
		  vhost="blog.spyzone.fr"
		  db-type="postgre"
		  db-host="10.0.3.13"
		  db-username="username"
		  db-password="password"
		  git-path="/tank/spyzone/blog"
		/>
		<container
		  name="analytic"
		  type="piwik"
		  vhost="piwik.spyzone.fr"
		  db-type="postgre"
		  db-host="10.0.3.13"
		  db-username="piwik-db"
		  db-password="password"
		  git-path="/tank/spyzone/piwik"
		/>
		<application
		  name="metal-php"
		  type="php"
		  path="/tank/php/smallproject"
		  vhost="lolproject.com"
		/>
	</container>
	<container
	  name="mumble"
	  type="mumble"
	  port="1234"
	  data="/tank/spyzone/mumble"
	/>
	<container
	  name="backup"
	  type="backup-saver"
	  save="/tank/spyzone"
	  to="spydemon@backup.spyzone.fr"
	  port="233"
	/>
</run>
